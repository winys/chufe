	            		{{else}}
	            		<span data-dialog data-fdata="op=0&id={{uid}}" data-tmpl="tmpl_Department_setrole"><i class="fa fa-user" title="设置为管理员"></i></span>
	            		{{/compare_handlebars}}
	            	</form>
	                <span data-delete data-dialog data-tmpl="tmpl_Department_deluser"><i class="fa fa-trash" title="删除"></i></span>
	            </td> -->
	        </tr>
	        {{/each}}
	    </tbody>
	</table>
</div>